# ---------- Stage 1: Builder ----------
FROM node:22-alpine AS builder

WORKDIR /src

COPY package*.json .
RUN npm install

COPY tsconfig.json .
COPY src/ src/

RUN npm run build

# ---------- Stage 2: Production ----------
FROM node:22-alpine AS production

WORKDIR /app

COPY package*.json ./
RUN npm ci --only=production

COPY --from=builder /src/dist ./dist

EXPOSE 3000
CMD ["npm", "run", "start"]
